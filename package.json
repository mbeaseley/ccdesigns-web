{
  "name": "ccdesigns-web",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "build-prod": "ng build --prod",
    "lint": "ng lint",
    "lint:fix": "npm run lint --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "npm:clear": "rm -rf $PWD/node_modules && rm $PWD/package-lock.json && npm cache verify && npm install",
    "postinstall": "node ./ng-add-pug-loader.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.0.7",
    "@angular/common": "10.0.7",
    "@angular/compiler": "10.0.7",
    "@angular/core": "10.0.7",
    "@angular/forms": "10.0.7",
    "@angular/platform-browser": "10.0.7",
    "@angular/platform-browser-dynamic": "10.0.7",
    "@angular/pwa": "^0.1000.4",
    "@angular/router": "10.0.7",
    "@angular/service-worker": "10.0.7",
    "ccdesign-components": "^2.0.3",
    "core-js": "^3.6.4",
    "ng-cli-pug-loader": "^0.2.2",
    "rxjs": "^6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1100.7",
    "@angular/cli": "^10.0.4",
    "@angular/compiler-cli": "10.0.7",
    "@angular/language-service": "10.0.7",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.27",
    "apply-loader": "^2.0.0",
    "codelyzer": "^6.0.0",
    "jest": "^26.2.1",
    "jest-preset-angular": "^8.2.1",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.19",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "ts-node": "^8.10.2",
    "tslint": "~6.1.0",
    "typescript": "^3.9.6"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/test.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
